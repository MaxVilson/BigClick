                                        option Тизеры 2
                                        option Тизеры 3

                        .row.form-group
                            .col-12.col-md-3
                                .form-group-title
                                    |Тематика
                                    span.form-group-title-star *
                            .col-12.col-md-4
                                .select-wrapper
                                    select.form-control
