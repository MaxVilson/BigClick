mixin input-range(props)
    .input-range&attributes(attributes)
        label.input-group.input-range__wrapper
            input#output.form-control.input-range__input-output(type='number' name='output' value='0')
            .input-group-append
                .input-group-text $

        input.input-range__input-range(type='text' name='range' id=props.id)

        if props.descr
            small.form-text.text-muted= props.descr
